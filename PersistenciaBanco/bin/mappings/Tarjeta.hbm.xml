<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<!-- Tutoriales y documentacion sobre Hibernate:
	路 http://docs.jboss.org/hibernate/orm/current/quickstart/html_single/
	路 https://docs.jboss.org/hibernate/orm/current/userguide/html_single/Hibernate_User_Guide.html
	路 https://www.tutorialspoint.com/hibernate/index.htm
	路 http://www.javatpoint.com/hibernate-tutorial -->
<!-- Documentacion sobre tipo de datos en Hibernate: https://www.tutorialspoint.com/hibernate/hibernate_mapping_types.htm -->
<!-- Documentacion sobre diferencias entre Set, Bag, List etc. : https://www.tutorialspoint.com/hibernate/hibernate_or_mappings.htm -->
<hibernate-mapping>

    <class name="es.deusto.arquiSW.classes.Tarjeta" table="tarjeta">

        <id name="numero" column="Numero" type="int">
            <generator class="native"/> <!-- This is used to automatically generate the primary key values in the DB. Mas info sobre 'generators' en: http://www.javatpoint.com/generator-classes -->
        </id>

        <property name="limiteExtraccion" column="LimiteExtraccion" type="int"/>
		<property name="fechaCaducidad" column="FechaCaducidad" type="string"/>
		<property name="proveedor" column="Proveedor" type="character">
			<type name="org.hibernate.type.EnumType">
				<param name="enumClass">es.deusto.arquiSW.classes.Tarjeta$EnumProveedores</param>
				<param name="type">12</param>
			</type>
		</property> 
		<property name="tipo" column="Tipo" type="character">
			<type name="org.hibernate.type.EnumType">
				<param name="enumClass">es.deusto.arquiSW.classes.Tarjeta$TiposTarjeta</param>
				<param name="type">12</param>
			</type>
		</property> 
		<property name="fechaExpedicion" column="FechaExpedicion" type="string"/>
		
		<many-to-one name="cuenta" column="Cuenta" not-null="true" class="es.deusto.arquiSW.classes.Cuenta"/>
   </class>
   
</hibernate-mapping>
