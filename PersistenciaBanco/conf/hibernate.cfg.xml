<?xml version='1.0' encoding='utf-8'?> <!DOCTYPE hibernate-configuration
        PUBLIC "-//Hibernate/Hibernate Configuration DTD//EN"
        "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">

<!-- Tutoriales y documentacion sobre Hibernate:
	路 http://docs.jboss.org/hibernate/orm/current/quickstart/html_single/
	路 https://docs.jboss.org/hibernate/orm/current/userguide/html_single/Hibernate_User_Guide.html
	路 https://www.tutorialspoint.com/hibernate/index.htm
	路 http://www.javatpoint.com/hibernate-tutorial -->
<hibernate-configuration>

    <session-factory>

        <property name="hibernate.connection.driver_class">com.mysql.jdbc.Driver</property>
        <property name="hibernate.connection.url">jdbc:mysql://localhost:3306/ArquitecturaSW</property>
        <property name="hibernate.connection.username">root</property>
        <property name="hibernate.connection.password">root</property>
        
        <property name="dialect">org.hibernate.dialect.MySQLDialect</property> <!-- Para que Hibernate converse correctamente con la BD, has de especificar un 'dialect' -->
        <property name="hbm2ddl.auto">create</property>
        
		<!-- C3p0 pool connection manager
        <property name="hibernate.c3p0.min_size">5</property>
        <property name="hibernate.c3p0.max_size">20</property>
        <property name="hibernate.c3p0.timeout">300</property>
        <property name="hibernate.c3p0.max_statements">50</property>
        <property name="hibernate.c3p0.idle_test_period">3000</property>
        -->

        <!-- SQL to stdout logging ("show_sql" = Echo all executed SQL to stdout)
        <property name="show_sql">true</property> 
        <property name="format_sql">true</property>
        <property name="use_sql_comments">true</property>
        -->

        <mapping resource="mappings/Cliente.hbm.xml"/>
        <mapping resource="mappings/Cuenta.hbm.xml"/>
        <mapping resource="mappings/Operacion.hbm.xml"/>
        <mapping resource="mappings/Tarjeta.hbm.xml"/>

    </session-factory>
</hibernate-configuration>
